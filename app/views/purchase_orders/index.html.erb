<p id="notice"><%= notice %></p>

<h1>Listing Purchase Orders</h1>

<table>
  <thead>
    <tr>
      <th>Link</th>
      <th>Notas</th>
      <th>Numero order</th>
      <th>Costo total</th>
      <th>Tipo de pago</th>
      <th>Cliente</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @purchase_orders.each do |purchase_order| %>
      <tr>
        <td><%= purchase_order.link %></td>
        <td><%= purchase_order.notas %></td>
        <td><%= purchase_order.numero_order %></td>
        <td><%= purchase_order.costo_total %></td>
        <td><%= purchase_order.tipo_de_pago %></td>
        <td><%= purchase_order.cliente %></td>
        <td><%= link_to 'Show', purchase_order %></td>
        <td><%= link_to 'Edit', edit_purchase_order_path(purchase_order) %></td>
        <td><%= link_to 'Destroy', purchase_order, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

